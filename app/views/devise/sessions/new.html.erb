<div class="container">
  <h2 class="text-center">ログイン</h2>
  <div class="d-flex justify-content-center"> 
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email"%>
        </div>
        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password"%>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



