 <!-- Custom styles for this template -->
  <link href="headers.css" rel="stylesheet">

<div class="container">
  <header class="d-flex align-items-center justify-content-between py-3 mb-4 border-bottom">
    <h1>
      <%= link_to "Bright side", root_path, class: "text-dark text-decoration-none" %>
    </h1>
    <div class="d-flex">
      <% if user_signed_in? %>
        <%= link_to current_user.nickname, "#", class: "btn btn-primary mr-2" %>
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-warning" %>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary mr-2" %>
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-warning" %>
      <% end %>
    </div>
  </header>
</div>

