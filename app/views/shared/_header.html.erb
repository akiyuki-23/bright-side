 <!-- Custom styles for this template -->
  <link href="headers.css" rel="stylesheet">

<div class="container">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <%= link_to "Bright side", "/", class: "d-flex align-items-center col-md-3 mb-2 mb-md-0 fs-2 text-dark text-decoration-none" %>

      <div class="col-md-3 text-end">
        <% if user_signed_in? %>
          <%= link_to current_user.nickname, "#", class: "btn btn-outline-primary me-2" %>
          <%= button_to 'ログアウト', "#", method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary" %>
          <%= link_to "新規登録", new_user_registration_path, class: "btn btn-warning" %>
        <% end %>
      </div>
  </header>
</div>