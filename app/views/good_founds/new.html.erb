<%= render "shared/header" %>
<div class="cover-new">
  <div class="container">
    <div class="d-flex justify-content-center">
      <h1 class="title-text font-weight-normal text-center mt-3">＜新規投稿＞<br>
        <span class='title-text h5'>〜過去の出来事のいい面をシェアしよう〜</span>
      </h1>
    </div>
    <div class="d-flex justify-content-center">
      <%= form_with(model: @good_found, url: good_founds_path, local:true) do |f| %>

       <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group">
        <label class="form-label">日付</label>
        <%= f.date_field :execution_date, class: "form-control", max: Date.current %>
      </div>
      <div class="form-group">
        <label class="form-label">タイトル</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">内容</label>
        <%= f.text_area :event_detail, row: 20, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">カテゴリー</label>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: "form-select"}) %>
      </div>
      <div class="publish-btn-content">
        <%= f.submit "投稿する", class: "btn btn-info" %>
        <%= link_to 'もどる', root_path, class: "btn btn-outline-dark"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>