<%= render "shared/header" %>
<h1>トップページ</h1>

<main>
  <div class="album py-5 bg-light">
    <div class="container">
      <% @good_founds.each do |good_found|%>
     <div class="card-group row-cols-auto">
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">
                  <%= good_found.title %>
                </h5>
              <p class="card-text">
                <%= truncate(good_found.event_detail, :length => 10) %>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">
                  <%= good_found.execution_date %>
                </small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>

</main>
<%# 新規投稿ボタン %>
<div class="position-fixed bottom-0 end-0 p-5">
  <%= link_to "新規投稿", new_good_found_path, class: 'btn btn-info rounded-pill fw-bold btn-lg' %>
</div>
<%# /新規投稿ボタン %>